{
  "name": "@feryardiant/sendgrid-inbound-parser",
  "type": "module",
  "version": "0.0.6",
  "description": "Simple library to parse SendGrid Inbound Mail",
  "author": "Fery Wardiyanto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/feryardiant/firebase-app.git",
    "directory": "packages/sendgrid-inbound-parser"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "standard-version",
    "test": "mocha"
  },
  "dependencies": {
    "busboy": "^1.6.0",
    "mailparser": "^3.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.25.2",
    "@firebase/logger": "^0.3.3",
    "@google-cloud/storage": "^6.2.3",
    "@types/busboy": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/mailparser": "^3.4.0",
    "@types/supertest": "^2.0.12",
    "chai": "^4.3.6",
    "eslint": "^8.20.0",
    "express": "^4.18.1",
    "mocha": "^9.2.2",
    "sinon": "^13.0.2",
    "standard-version": "^9.5.0",
    "supertest": "^6.2.4",
    "tsup": "^6.2.0",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "extends": [
      "@antfu/ts"
    ],
    "ignorePatterns": [
      "test/fixtures/**"
    ],
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "standard-version": {
    "skip": {
      "tag": true,
      "changelog": true
    }
  }
}
